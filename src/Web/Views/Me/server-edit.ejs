<%- include('../Blocks/Header.ejs', { Coven, user, Page: "Server Edit", Redirect: "/me", pageType: "" }) %>

<link rel="stylesheet" href="https://mythicalbots.xyz/css/bots.css">
<link rel="stylesheet" href="https://mythicalbots.xyz/css/form.css">
<link rel="stylesheet" href="https://mythicalbots.xyz/css/github-markdown.css"> 

<div class="index-container" style="background: transparent; ">
	<div class="text-center">
			<img class="server-avatar" src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>" style="outline-style:red; color: #1b1b1b;" draggable="false" onerror="this.onerror=null;this.src='https://cdn.glitch.com/a555ed97-82ee-4fd0-bf48-544503e0b774%2Fdownload%20(2).jpeg?v=1579188933613';">
			  <p class="server-name" style="outline-style:black; color: #1b1b1b;" title="news"><%= guild.name %> - Settings</p>
            <br>
	</div>
</div>

<div class="container">
 <center>
   <div class="row" role="alert">
     <div class="col-md-12" role="alert">
       <div class="alert alert-primary alert-danger" role="alert">
         <h4 class="alert-heading"> Soul Coven - Developer Alert <br> This page is still under construction! </h4>
      </div>
    </div>
  </div>
 </center>
</div>

<% if(st) { %>

<%

let change = [];

let mes = st.split(" ")

    mes.map(g => {
        if(g === "prefix_changed") change.push("Prefix")
    })

%>

<div aria-live="polite" aria-atomic="true" role="alert" style="position: relative;">
<div class="toast" style="position: absolute; top: 30px; right: 0; z-index: 1" data-delay="10000">
<div class="toast-header">
<img src="/images/check.png" style="border-radius:50%;width:64px;height:64px;" class="rounded mr-2" alt="...">
<strong class="mr-auto">Server Edit</strong>
<small>Just Now </small>
<button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
<span aria-hidden="true">&times;</span>
</button>
</div>
<div class="toast-body" style="color:black;">

  The following was changed for <%= guild.name %>: <%- change.map(g => g + "<br>").join('') %>
  
</div>
<div class="toast-header">
Soul Coven - Announcement
</div>
</div>
</div>

<script>$(".toast").toast('show')</script>

<% } %>

<% 

let levelOp = ""

if(settings.levelsystem) {
levelOp = "false"
} else {
levelOp = "true"
}

%>

<div class="padded-container">
  <div class="row"> 
  
    <div class="col-lg-4 col-md-6 col-sm-12">
      <a class="no-color" href="/me/<%= guild.id %>/edit/leaderboard?q=<%= levelOp %>">
        <div class="card preview-card">
          <div class="card-body">
            <div class="head">
             <img class="float-left lazy" src="/images/medal.png" alt="img" draggable="false">
              <div class="content">
                <h3 title="news"> Leveling </h3>
                <p class="description" style="color:#fff;" title="biography"> <% if(settings.levelsystem) { %> Enabled <% } else { %> Disabled <% } %> </p>
              </div>
            </div>
          </div>
        </div>
      </a>
    </div>
    
    <div class="col-lg-4 col-md-6 col-sm-12">
      <a class="no-color" href="/leaderboard/<%= guild.id %>">
        <div class="card preview-card">
          <div class="card-body">
            <div class="head">
             <img class="float-left lazy" src="/images/leaderboard.png" alt="img" draggable="false">
              <div class="content">
                <h3 title="news"> LeaderBoard Settings </h3>
                <p class="description" style="color:#fff;" title="biography"> Click Here to change settings! </p>
              </div>
            </div>
          </div>
        </div>
      </a>
    </div>
    
    </div>	
</div>

<br><br><br><br><br>

  <div class="container">
   <div id="errormessage"></div>
   <div class="col-lg-7 card server-form-panel">
      <article class="card-body">
         <form action="" method="post" role="form">
            <input type="hidden" name="id" value="<%= guild.id %>">
            
              <h5>Prefix <span style="color:red">*</span></h5>
             <div class="form-group input-group">
               <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fa fa-pencil" style="padding:0"></i></span>
               </div>
               <input name="prefix" id="prefix" class="form-control xtags" placeholder="Give a prefix!" type="text" value="<%= settings.prefix %>" required>
            </div>
           <p class="help-block">- Use this to change the bots prefix! 
            </p>
            <br>
           
            <hr>
            
            <div class="form-group">
               <button type="submit" class="btn btn-red btn-block" id="ssubm" name="ssubm" onclick="return xcheck();">Submit </button>
            </div>
         </form>
      </article>
   </div>
</div>
  
</main>