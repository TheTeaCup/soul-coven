<%- include('../Blocks/Header.ejs', { Coven, user, Page, Redirect: "/news/create", pageType: "" }) %>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="/css/page.css">
<link rel="stylesheet" href="https://mythicalbots.xyz/css/form.css">
<script src="https://use.fontawesome.com/bfddc8ce66.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" crossorigin="anonymous" async></script>


<main>
  <div class="jumbotron secondary-jumbotron bg-transparent">
      <div class="container">
            <h1>News Editor </h1>
            <center><h2 style="font-size:20px;">Change or Add to our news page!</h2></center>
      </div>
  </div>
  

  
<!--
 Ideas:
- desc
- image
- news title
- news brack



-->
  
  <div class="container">
   <div id="errormessage"></div>
   <div class="col-lg-7 card server-form-panel">
      <article class="card-body">
         <form action="" method="post" role="form">
            <input type="hidden" name="id" value=">">

              <h5>News Title <span style="color:red">*</span></h5>
             <div class="form-group input-group">
               <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fa fa-header" style="padding:0"></i></span>
               </div>
               <input name="title" id="title" class="form-control xtags" placeholder="Give a title!" type="text" value="<%- title %>" required>
            </div>
           <p class="help-block">- Name the new news!
            </p>
            <br>

                   <h5>News Image <span style="color:red">*</span></h5>
             <div class="form-group input-group">
               <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fa fa-image" style="padding:0"></i></span>
               </div>
               <input name="image" id="image" class="form-control xtags" placeholder="Give a image!" type="text" value="<%- image %>" required>
            </div>
           <p class="help-block">- Give a image based on the news <br> - For the soul coven logo just type: /images/pent.png
            </p>
            <br>
            
                    <h5>News Type <span style="color:red">*</span></h5>
             <div class="form-group input-group">
               <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fa fa-info-circle" style="padding:0"></i></span>
               </div>
               <input name="type" id="type" class="form-control xtags" placeholder="ex: information, changes, ect" type="text" value="<%- type %>" required>
            </div>
           <p class="help-block">- Why type of news is this?
            </p>
            <br>
           
        <h5>News Bracket <span style="color:red">*</span></h5>
             <div class="form-group input-group">
               <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fa fa-pencil" style="padding:0"></i></span>
               </div>
               <input name="brack" id="brack" class="form-control xtags" placeholder="this-is-the-news" type="text" value="<%- id %>" required>
            </div>
           <p class="help-block">- Ex: "this-new-thing"
            </p>
            <br>

             <div class="form-group input-group">
             <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fa fa-align-center" style="padding:0"></i></span>
               </div>
               <textarea onchange="xcheck()" name="fulldesc" id="fulldesc" height="auto" class="form-control" rows="10" placeholder="Write LONG description about your bot" maxlength="15000" data-max="15000" data-min="100" required><%- desc %></textarea>
            </div>
            <p class="help-block">- Markdown Supported <br> - HTML Supported <br> - Minimum 100 characters <br> - Maximum 15000 characters
            </p>
              <br>

            <hr>
            
            <div class="form-group">
               <button type="submit" class="btn btn-red btn-block" id="ssubm" name="ssubm" onclick="return xcheck();">Submit</button>
            </div>
         </form>
      </article>
   </div>
</div>
  
</main>

<script>
$('textarea').autoResize();
</script>