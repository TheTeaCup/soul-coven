  <div class="container">
   <div id="errormessage"></div>
   <div class="col-lg-7 card server-form-panel">
      <article class="card-body">
         <form action="" method="post" role="form">
            <input type="hidden" name="id" value="<%= user.id %>">

              <h5>Comment Title <span style="color:red">*</span></h5>
             <div class="form-group input-group">
               <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fa fa-user" style="padding:0"></i></span>
               </div>
               <input name="name" id="name" class="form-control xtags" placeholder="What is the gist of your comment" type="text" value="<%= title %>" required>
            </div>
           <p class="help-block">- Ex: Baby Witch Help
            </p>
            <br>
            
        <h5>Comment Description <span style="color:red">*</span></h5>
             <div class="form-group input-group">
             <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-question" style="padding:0"></i></span>
               </div>
               <textarea onchange="xcheck()" name="desc" id="desc" height="auto" class="form-control" rows="10" placeholder="What's this about?" maxlength="15000" data-max="15000" data-min="100" required><%= desc %></textarea>
            </div>
            <p class="help-block">- <a href="">Markdown</a> is allowed <br> - Links are allowed but are monitored
            </p>
              <br>
              

            <hr>
            
            <div class="form-group">
               <button type="submit" class="btn btn-red btn-block" id="ssubm" name="ssubm" onclick="return xcheck();">Submit</button>
            </div>
         </form>
      </article>
   </div>
</div>
  
